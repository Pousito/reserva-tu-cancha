# Configuración del Servidor
PORT=3000
NODE_ENV=production

# Base de Datos PostgreSQL
DATABASE_URL=postgresql://usuario:password@localhost:5432/reserva_tu_cancha

# Seguridad
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambiar_en_produccion
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=https://www.reservatuscanchas.cl

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email (configurar para envío de confirmaciones)
# Para Gmail: usar contraseña de aplicación, no la contraseña normal
# 1. Activar verificación en 2 pasos en tu cuenta Google
# 2. Generar contraseña de aplicación en: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion_gmail

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Transbank Webpay Plus
TRANSBANK_API_KEY=tu_api_key_transbank
TRANSBANK_COMMERCE_CODE=tu_commerce_code
TRANSBANK_ENVIRONMENT=integration
TRANSBANK_RETURN_URL=https://www.reservatuscanchas.cl/payment.html
TRANSBANK_FINAL_URL=https://www.reservatuscanchas.cl/?payment=success